@using System.Configuration
@{
}

<style>
    .cells {
        border: 1px solid rgb(241, 211, 165);
        padding: 5px;
    }
</style>

<table>
    <tr>
        <td class="cells">Agent</td>
        <td class="cells">Amount</td>
        <td class="cells">Pax</td>
    </tr>
    @for (int a = 0; a < ViewBag.Agent.Count; a++ )
    {
        <tr>
            <td class="cells">@ViewBag.Agent[a]</td>
            <td class="cells">$ @String.Format("{0:0.00}", @ViewBag.Amount[a])</td>
            <td class="cells">@ViewBag.Pax[a]</td>
        </tr>
    }
</table>